<mvc:View controllerName="customer.customer.controller.RestaurantMenu.RestaurantMenu" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:core="sap.ui.core" xmlns:f="sap.f" >
	<Page >
		<customHeader>
			<tnt:ToolHeader>
				<Button icon="sap-icon://meal"/>
				<Title text="{Name}"/>
				<ToolbarSpacer/>
				<MenuButton id="categoryMenuButton" type="Transparent">
					<Menu id="categoryMenu" items="{path:'Categories',events:{ dataReceived: '.onReceiveCategories'}}" itemSelected="onSelectCategory">
						<MenuItem icon="sap-icon://open-folder" text="{Description}"/>
					</Menu>
				</MenuButton>
			</tnt:ToolHeader>
		</customHeader>
		<content>
			<List id="productsList" growing="true" growingScrollToLoad="true"
				items="{path:'Products', parameters: {expand: 'Category' }, sorter: { path: 'Category.CategoryId', group: '.getCategoryDescription' } }">
				<items>
					<CustomListItem type="Active" press="onPressProduct">
						<HBox justifyContent="Start" alignItems="Center" class="sapUiTinyMarginTopBottom sapUiSmallMarginEnd sapUiTinyMarginBegin"
							fitContainer="true">
							<f:Avatar displayShape="Circle" src="{= ${Image} || './img/placeholder.png' }" displaySize="M"/>
							<VBox justifyContent="Center" alignItems="SpaceBetween" fitContainer="true" class="sapUiTinyMarginBegin">
								<layoutData>
									<FlexItemData growFactor="10"/>
								</layoutData>
								<HBox justifyContent="SpaceBetween" alignItems="Center">
									<Title text="{Description}" wrapping="true"/>
									<Title text="{path:'Price',type:'.types.floatType'} ARS"/>
								</HBox>
								<Label text="descripcion del plato"/>
							</VBox>
						</HBox>
					</CustomListItem>
				</items>
			</List>
		</content>
		<footer>
			<Toolbar id="cartToolbar" visible="{= ${orderJSON>/Total} > 0 }" active="true" press="onCartToolbarPress">
				<core:Icon src="sap-icon://cart-full" size="25px" class="sapUiTinyMarginBegin"/>
				<Text class="sapUiTinyMarginBegin" text="{path:'Items',formatter:'.formatter.getLength'}"/>
				<ToolbarSpacer/>
				<Title titleStyle="H3" text="TOTAL: {path: 'orderJSON>/Total', type:'.types.floatType'} ARS" class="sapUiTinyMarginEnd"/>
				<core:Icon src="sap-icon://navigation-right-arrow" class="sapUiTinyMarginEnd"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>