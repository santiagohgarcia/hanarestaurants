	<CustomListItem id="orderItem" highlight="{path:'restaurants>Status/StatusId', formatter:'.formatter.orderStatusToState'}">
	
		<HBox justifyContent="SpaceBetween" class="sapUiSmallMargin">
			<VBox justifyContent="SpaceBetween" class="sapUiSmallMarginEnd">
				<layoutData>
					<FlexItemData growFactor="3" maxWidth="450px"/>
				</layoutData>
				<VBox justifyContent="Start" fitContainer="true" items="{restaurants>Items}" fieldGroupIds="items">
					<HBox justifyContent="SpaceBetween" class="sapUiTinyMarginBottom" alignItems="Center">
						<Text text="{restaurants>Quantity} x {restaurants>ProductDescription}"/>
						<ObjectNumber number="{path:'restaurants>Price',type:'.types.floatType'}" unit="ARS" emphasized="false" textAlign="End">
							<layoutData>
								<FlexItemData minWidth="60px"/>
							</layoutData>
						</ObjectNumber>
					</HBox>
				</VBox>
				<!--	<HBox justifyContent="Center" alignItems="Center">
					<Link text="More..." press="onMorePress"/>
				</HBox>-->
				<HBox justifyContent="SpaceBetween" alignItems="End" class="orderTotalLine">
					<layoutData>
						<FlexItemData minHeight="25px"/>
					</layoutData>
					<Label text="{i18n>Total}" design="Bold"/>
					<Label binding="{restaurants>TotalPrice}" text="{path:'restaurants>Total',type:'.types.floatType'} ARS" design="Bold" textAlign="End"/>
					<!--	<ObjectNumber binding="{restaurants>TotalPrice}" number="{path:'restaurants>Total',type:'.types.floatType'}" unit="ARS" textAlign="End"/>-->
				</HBox>
			</VBox>
			<VBox justifyContent="SpaceBetween">
				<layoutData>
					<FlexItemData minWidth="90px" growFactor="1"/>
				</layoutData>
				<VBox alignItems="End">
					<ObjectStatus text="{restaurants>Status/Description}"
						state="{path:'restaurants>Status/StatusId', formatter:'.formatter.orderStatusToState'}"/>
					<Label text="{path:'restaurants>ModifiedAt',type:'.types.dateTimeType'}" class="sapUiTinyMarginTop"/>
					<Label visible="{= ${restaurants>RestaurantTableId} > 0 }" text="{i18n>Table} #{restaurants>RestaurantTableId}" class="sapUiTinyMarginTop"/>
					<Label visible="{= ${restaurants>RestaurantTableId} === 0 }" text="{i18n>NoTable}" class="sapUiTinyMarginTop"/>
					<f:Avatar src="sap-icon://customer" displaySize="XS" class="sapUiTinyMarginTop"/>
				</VBox>
				<HBox visible="{= ${restaurants>Status/StatusId} === 3 }" justifyContent="End" alignItems="Center">
					<Button type="Transparent" icon="sap-icon://accept" press="onPressReady"/>
					<Button type="Transparent" icon="sap-icon://decline" press="onPressCancel"/>
				</HBox>
			</VBox>
		</HBox>
	</CustomListItem>
</core:FragmentDefinition>