<mvc:View controllerName="restaurants.ui5.controller.Orders.NewOrder" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:l="sap.ui.layout" xmlns:f="sap.f" xmlns:grid="sap.ui.layout.cssgrid">
	<Page showHeader="false">
		<tnt:ToolHeader >
			<Button icon="sap-icon://arrow-left" type="Transparent" press="onNavBack"/>
			<Title text="{i18n>NewOrder}"/>
			<ToolbarSpacer/>
			<Button type="Emphasized" press="onSave" icon="sap-icon://save" text="{i18n>Save}"/>
		</tnt:ToolHeader>
		<l:ResponsiveSplitter defaultPane="default">
			<l:PaneContainer>
				<l:SplitPane requiredParentWidth="400">
					<mvc:XMLView id="categoryProductsView" viewName="restaurants.ui5.view.Menu.CategoryProducts"></mvc:XMLView>
				</l:SplitPane>
				<l:SplitPane >
					<Table items="{restaurants>Items}" mode="Delete" delete="onDeleteOrderItem" sticky="HeaderToolbar">
						<layoutData>
							<FlexItemData minWidth="450px"/>
						</layoutData>
						<headerToolbar>
							<Toolbar >
								<Title text="{i18n>Order}"/>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column vAlign="Middle"></Column>
							<Column vAlign="Middle" hAlign="End"></Column>
						</columns>
						<items>
							<ColumnListItem >
								<VBox justifyContent="SpaceAround" height="76px">
									<Title titleStyle="H4" text="{restaurants>ProductDescription}"/>
									<StepInput fieldGroupIds="orderFields" value="{path:'restaurants>Quantity', type: 'sap.ui.model.type.Integer'}" change="onChangeQuantity"
										description="x {restaurants>UnitPrice}"/>
								</VBox>
								<VBox justifyContent="SpaceAround" alignItems="End">
									<Title titleStyle="H3" text="{path:'restaurants>Price',type:'.types.floatType'}" class="sapUiTinyMarginBottom"/>
									<Text text="ARS"/>
								</VBox>
							</ColumnListItem>
						</items>
					</Table>
				</l:SplitPane>
			</l:PaneContainer>
		</l:ResponsiveSplitter>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Title visible="{= ${orderJSON>/Total} > 0}" titleStyle="H1" text="{i18n>Total}" class="sapUiSmallMarginBegin"/>
				<Title visible="{= ${orderJSON>/Total} > 0}" titleStyle="H1" text="{path:'orderJSON>/Total',type:'.types.floatType'} ARS"
					class="sapUiSmallMarginEnd"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>