<mvc:View controllerName="restaurants.ui5.controller.Orders.OrderGrid" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.f"
	xmlns:ux="sap.uxap" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:cc="restaurants.ui5.controls">
	<ux:ObjectPageLayout id="ordersObjectPage" headerContentPinnable="false" useIconTabBar="true" navigate="onTabChange" showFooter="true">
		<ux:headerTitle>
			<ux:ObjectPageDynamicHeaderTitle>
				<ux:heading>
					<OverflowToolbar style="Clear">
						<Title text="{i18n>Orders}"/>
					</OverflowToolbar>
				</ux:heading>
			</ux:ObjectPageDynamicHeaderTitle>
		</ux:headerTitle>
		<ux:sections>
			<ux:ObjectPageSection id="ordersSection" title="{i18n>OrderGrid_Orders}">
				<ux:subSections>
					<ux:ObjectPageSubSection title="{i18n>OrderGrid_Orders}">
						<f:GridList
							items="{path:'restaurants>Orders', parameters:{expand:'Status,Customer,Items'}, filters: {path:'Status.StatusId', operator: 'EQ', value1: 3} , sorter: {path: 'ModifiedAt', descending:true},factory: '.orderItemFactory' }">
							<f:customLayout>
								<grid:GridBoxLayout boxMinWidth="400px"/>
							</f:customLayout>
						</f:GridList>
					</ux:ObjectPageSubSection>
				</ux:subSections>
			</ux:ObjectPageSection>
		</ux:sections>
		<ux:footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button icon="sap-icon://add" press="onAddOrder" type="Transparent"/>
			</Toolbar>
		</ux:footer>
	</ux:ObjectPageLayout>
</mvc:View>