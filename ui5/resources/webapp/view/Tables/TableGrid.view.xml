<mvc:View controllerName="restaurants.ui5.controller.Tables.TableGrid" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.f"
	xmlns:ux="sap.uxap" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:grid="sap.ui.layout.cssgrid">
	<ux:ObjectPageLayout id="tablesObjectPage" headerContentPinnable="false" useIconTabBar="true" navigate="onTabChange" showFooter="true">
		<ux:headerTitle>
			<ux:ObjectPageDynamicHeaderTitle>
				<ux:heading>
					<OverflowToolbar style="Clear">
						<Title text="{i18n>Tables}"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" press="onAddTable" type="Transparent"/>
					</OverflowToolbar>
				</ux:heading>
			</ux:ObjectPageDynamicHeaderTitle>
		</ux:headerTitle>
		<ux:sections>
			<ux:ObjectPageSection id="tablesSection" title="{i18n>TableGrid_Tables}">
				<ux:subSections>
					<ux:ObjectPageSubSection title="{i18n>TableGrid_Tables}">
						<f:GridList items="{restaurants>Tables}">
							<f:items>
								<CustomListItem type="Active" press="onPressTable">
									<HBox class="sapUiSmallMargin" justifyContent="SpaceBetween" alignContent="Center">
										<Title text="#{restaurants>RestaurantTableId}" titleStyle="H4"/>
										<ObjectStatus binding="{restaurants>PendingOrders}" icon="sap-icon://pending" text="{restaurants>PendingOrders}" state="Warning"
											visible="{= ${restaurants>PendingOrders} > 0 }"/>
									</HBox>
								</CustomListItem>
							</f:items>
						</f:GridList>
					</ux:ObjectPageSubSection>
				</ux:subSections>
			</ux:ObjectPageSection>
		</ux:sections>
		<ux:footer></ux:footer>
	</ux:ObjectPageLayout>
</mvc:View>