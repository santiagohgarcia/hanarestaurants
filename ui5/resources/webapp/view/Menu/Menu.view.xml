<mvc:View controllerName="restaurants.ui5.controller.Menu.Menu" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" height="100%" xmlns:f="sap.f" xmlns:grid="sap.ui.layout.cssgrid">
	<SplitContainer id="menuSplitCont" initialDetail="initPage" initialMaster="categories">
		<masterPages>
			<Page id="categories" title="{i18n>Categories}">
				<List items="{path: 'restaurants>Categories', filters: {path: 'ParentCategory.CategoryId', operator: 'EQ', value1: null }}" mode="Delete"
					delete="onDeleteCategory">
					<items>
						<ObjectListItem title="{restaurants>Description}" type="DetailAndActive" press="onPressCategory" detailPress="onEditCategory"/>
					</items>
				</List>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" press="onAddCategory"/>
					</Toolbar>
				</footer>
			</Page>
			<Page id="subcategories" title="{restaurants>Description}" showNavButton="true" navButtonPress="onPressSubCategoriesBack">
				<List items="{restaurants>Categories}" delete="onDeleteProduct">
					<items>
						<ObjectListItem title="{restaurants>Description}" type="Active" press="onSubCategoryPress" detailPress="onEditProduct"/>
					</items>
				</List>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" press="onAddSubCategory"/>
					</Toolbar>
				</footer>
			</Page>
		</masterPages>
		<detailPages>
			<MessagePage id="initPage" showHeader="false" description="{i18n>SelectACategory}" text="{i18n>Welcome}"></MessagePage>
			<Page id="category" title="{restaurants>Description}" class="sapUiResponsiveContentPadding">
				<f:GridList items="{restaurants>Products}">
					<f:customLayout>
						<grid:GridBoxLayout boxWidth="15rem"/>
					</f:customLayout>
					<f:items>
						<CustomListItem>
							<VBox justifyContent="SpaceBetween">
								<layoutData>
									<FlexItemData growFactor="1" shrinkFactor="0"/>
								</layoutData>
								<VBox>
									<HBox justifyContent="SpaceBetween" class="sapUiSmallMargin">
										<Title text="{restaurants>Description}" wrapping="true"/>
										<ObjectNumber number="{restaurants>Price}" unit="ARS"/>
									</HBox>
									<Image src="{restaurants>Image}" width="100%"></Image>
								</VBox>
								<OverflowToolbar design="Transparent">
									<ToolbarSpacer/>
									<Button icon="sap-icon://edit" type="Transparent" press="onEditProduct"/>
									<Button icon="sap-icon://delete" type="Transparent" press="onDeleteProduct"/>
								</OverflowToolbar>
							</VBox>
						</CustomListItem>
					</f:items>
				</f:GridList>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" press="onAddProduct"/>
					</Toolbar>
				</footer>
			</Page>
		</detailPages>
	</SplitContainer>
</mvc:View>