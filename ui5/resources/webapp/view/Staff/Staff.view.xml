<mvc:View controllerName="restaurants.ui5.controller.Staff.Staff" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" height="100%" xmlns:ux="sap.uxap" xmlns:core="sap.ui.core">
	<SplitContainer id="employeesSplitCont" initialDetail="employee" initialMaster="employees">
		<masterPages>
			<Page id="employees" title="{i18n>Staff}" floatingFooter="true" showFooter="{= !${view>/Edit}}">
				<List id="employeeList" mode="SingleSelectMaster" selectionChange="onSelectEmployee"
					items="{path: 'Employees', events: {dataReceived: '.onEmployeesReceived'} }">
					<items>
						<ObjectListItem icon="sap-icon://employee" title="{Name} {LastName}"/>
					</items>
				</List>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" press="onAddStaff" text="{i18n>AddEmployee}" type="Emphasized" />
					</Toolbar>
				</footer>
			</Page>
		</masterPages>
		<detailPages>
			<ux:ObjectPageLayout id="employee" enableLazyLoading="true" showFooter="{view>/Edit}">
				<ux:headerTitle>
					<ux:ObjectPageHeader objectTitle="{Name} {LastName}" objectImageShape="Circle" objectImageURI="sap-icon://employee"
						isObjectTitleAlwaysVisible="true" isObjectIconAlwaysVisible="true" isObjectSubtitleAlwaysVisible="true" objectSubtitle="{UserId}">
						<ux:actions>
							<ToggleButton icon="sap-icon://edit" type="Transparent" press="onEditEmployee" pressed="{view>/Edit}"/>
							<Button icon="sap-icon://delete" type="Transparent" press="onDeleteEmployee"/>
						</ux:actions>
					</ux:ObjectPageHeader>
				</ux:headerTitle>
				<ux:sections>
					<ux:ObjectPageSection showTitle="false" titleUppercase="false" titleLevel="H6">
						<ux:subSections>
							<ux:ObjectPageSubSection id="profileSection" title="{i18n>Profile}">
								<core:Fragment fragmentName="restaurants.ui5.view.Staff.fragments.StaffDisplay" type="XML"/>
							</ux:ObjectPageSubSection>
							<ux:ObjectPageSubSection title="{i18n>LoginData}"></ux:ObjectPageSubSection>
						</ux:subSections>
					</ux:ObjectPageSection>
				</ux:sections>
				<ux:footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://save" text="{i18n>Save}" type="Emphasized" press="onSave"/>
					</Toolbar>
				</ux:footer>
			</ux:ObjectPageLayout>
		</detailPages>
	</SplitContainer>
</mvc:View>