<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<f:Form editable="true">
		<f:layout>
			<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4"
				emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false"/>
		</f:layout>
		<f:formContainers>
			<f:FormContainer>
				<f:title>
					<core:Title text="{i18n>ProfileData}"/>
				</f:title>
				<f:FormElement label="{i18n>Name}">
					<Input fieldGroupIds="staffFields" valueLiveUpdate="true" required="true" value="{path:'Name',type:'sap.ui.model.type.String'}"/>
				</f:FormElement>
				<f:FormElement label="{i18n>LastName}">
					<Input fieldGroupIds="staffFields" valueLiveUpdate="true" required="true" value="{path:'LastName',type:'sap.ui.model.type.String'}"/>
				</f:FormElement>
			</f:FormContainer>
			<f:FormContainer>
				<f:title>
					<core:Title text="{i18n>LoginData}"/>
				</f:title>
				<f:FormElement label="{i18n>UserId}">
					<Input fieldGroupIds="staffFields" editable="{= !Boolean(${StaffId}) }" valueLiveUpdate="true" required="true"
						value="{path:'UserId',type:'sap.ui.model.type.String'}"/>
				</f:FormElement>
				<!--	<f:FormElement label="{i18n>Password}">
					<Input fieldGroupIds="staffFields" required="true" valueLiveUpdate="true" value="{path:'Password',type:'sap.ui.model.type.String'}"
						type="{= ${view>/ViewPassword} ? 'Text' : 'Password' }"/>
					<ToggleButton fieldGroupIds="staffFields" icon="sap-icon://display" type="Transparent" pressed="{view>/ViewPassword}"/>
				</f:FormElement>-->
				<f:FormElement >
					<Button icon="sap-icon://reset" type="Transparent" text="{i18n>ResetPassword}" width="200px">
						<layoutData>
							<l:GridData indent="L3 M3 S6" span="L3 M3 S6"/>
						</layoutData>
					</Button>
				</f:FormElement>
			</f:FormContainer>
		</f:formContainers>
	</f:Form>
</core:FragmentDefinition>