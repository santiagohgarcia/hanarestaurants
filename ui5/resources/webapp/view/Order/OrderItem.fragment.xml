<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.f">
	<CustomListItem class="orderItem">
		<VBox fitContainer="true">
			<HBox class="sapUiSmallMarginTop sapUiSmallMarginBeginEnd">
				<VBox alignItems="Begin" class="sapUiSmallMarginEnd">
					<layoutData>
						<FlexItemData growFactor="0"/>
					</layoutData>
					<f:Avatar src="sap-icon://employee" displaySize="S"/>
					<ObjectStatus text="{Status/Description}" state="{path:'Status/StatusId', formatter:'.formatter.orderStatusToValueState'}"
						class="sapUiTinyMarginBottom orderStatus"/>
					<Label text="{path:'ModifiedAt',type:'.types.dateTimeType'}"/>
				</VBox>
				<VBox>
					<layoutData>
						<FlexItemData growFactor="8"/>
					</layoutData>
					<HBox justifyContent="SpaceBetween"><Label text="{i18n>ORDER} #{RestaurantOrderId}" design="Bold"/>
						<Label text="TOTAL: {path:'Total',type:'.types.floatType'} ARS" design="Bold" textAlign="End"/>
					</HBox>
					<VBox justifyContent="Start" fitContainer="true" items="{Items}" fieldGroupIds="items" class="orderItemsBorder">
						<HBox justifyContent="SpaceBetween" class="sapUiTinyMarginBottom" alignItems="Center">
							<Text text="{Quantity} x {ProductDescription}"/>
							<ObjectNumber number="{path:'Price',type:'.types.floatType'}" unit="ARS" emphasized="false" textAlign="End">
								<layoutData>
									<FlexItemData minWidth="60px"/>
								</layoutData>
							</ObjectNumber>
						</HBox>
					</VBox>
				</VBox>
			</HBox>
			<OverflowToolbar visible="{= ${Status/StatusId} === 'PENDING' }" design="Solid" class="orderToolbar">
				<ToolbarSpacer/>
				<Button type="Transparent" icon="sap-icon://decline" press="onPressOrderCancel" class="rejectOrderButton "/>
				<Button type="Transparent" icon="sap-icon://accept" press="onPressOrderPayed" class="acceptOrderButton sapUiSmallMarginEnd"/>
			</OverflowToolbar>
			<HBox visible="{= ${Status/StatusId} !== 'PENDING' }" class="sapUiSmallMarginBottom"/>
		</VBox>
	</CustomListItem>
</core:FragmentDefinition>