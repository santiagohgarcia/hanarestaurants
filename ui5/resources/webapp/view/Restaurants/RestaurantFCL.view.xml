<mvc:View controllerName="restaurants.ui5.controller.Restaurants.RestaurantFCL" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" xmlns:tnt="sap.tnt" displayBlock="true" xmlns="sap.m" xmlns:f="sap.f">
	<tnt:ToolHeader >
		<Button icon="sap-icon://home" type="Transparent" press="onPressHome"/>
		<Title text="{restaurants>Name}"/>
		<ToolbarSpacer/>
		<IconTabHeader id="iconTabHeader" select="onSelectTab">
			<items>
				<IconTabFilter key="menu" text="{i18n>Menu}"/>
				<IconTabFilter key="staff" text="{i18n>Staff}"/>
			</items>
		</IconTabHeader>
		<ToolbarSpacer/>
		<MenuButton type="Transparent" icon="sap-icon://employee"></MenuButton>
	</tnt:ToolHeader>
	<f:FlexibleColumnLayout id="fcl" layout="{view>/layout}" backgroundDesign="Solid" stateChange="onStateChanged">
		<f:beginColumnPages>
			<mvc:XMLView id="menu" viewName="restaurants.ui5.view.Menu.Menu"></mvc:XMLView>
			<mvc:XMLView id="staff" viewName="restaurants.ui5.view.Staff.Staff"></mvc:XMLView>
		</f:beginColumnPages>
	</f:FlexibleColumnLayout>
</mvc:View>